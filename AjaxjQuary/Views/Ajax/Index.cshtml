
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 style="text-align:center">Ajax JQuary Crud</h1>
<button class="btn btn-sm btn-primary m-2" id="btnAddEmployee">Add Employee</button>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="table_data"></tbody>
</table>

@*----------------------------------------------------------------modal popUp-------------------------------------------------------------------------------------*@

<div class="modal fade modal" id="EmployeeMadal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title" id="employeeHeading">Add Employee</h1>
                <button class="close text-danger" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group" id="empId">
                        <label>Id</label>
                        <input type="text" class="form-control" id="EmployeeId" disabled />
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" placeholder="Enter name" class="form-control" id="Name" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" placeholder="Enter email address" class="form-control" id="Email" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Salary</label>
                        <input type="number" placeholder="Enter salary" class="form-control" id="Salary" autocomplete="off" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="AddEmployee()" id="AddEmployee">Save</button>
                <button class="btn btn-warning" onclick="UpdateEmployee()" style="display:none" id="btnUpdate">Update</button>
                <button class="btn btn-danger btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div>
    <input type="hidden" id="urlEmployeeData" value="@Url.Action("EmployeeList","Ajax")"/>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/custom.js"></script>


